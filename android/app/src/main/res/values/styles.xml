<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar: dark background with light buttons for light mode -->
        <item name="android:navigationBarColor">#1a1a1a</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Android 15: Force navigation bar contrast -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:navigationBarDividerColor">#1a1a1a</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        <!-- Android 12+ splash screen -->
        <item name="android:windowSplashScreenBackground">#EA1C2C</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon_centered</item>
        <!-- Navigation bar: dark background with light buttons -->
        <item name="android:navigationBarColor">#1a1a1a</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Android 15: Force navigation bar contrast -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:navigationBarDividerColor">#1a1a1a</item>
    </style>
</resources>