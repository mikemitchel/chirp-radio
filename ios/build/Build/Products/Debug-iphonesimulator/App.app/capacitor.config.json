{
	"appId": "org.chirpradio.app",
	"appName": "chirp-radio",
	"webDir": "dist",
	"server": {
		"allowNavigation": [
			"https://chirpradio.appspot.com/*",
			"https://peridot.streamguys1.com/*",
			"https://*.lastfm.freetls.fastly.net/*"
		]
	},
	"ios": {
		"contentInset": "never"
	},
	"plugins": {
		"StatusBar": {
			"style": "dark",
			"overlay": true
		},
		"SplashScreen": {
			"launchShowDuration": 3000,
			"launchAutoHide": true,
			"backgroundColor": "#ea1c2c",
			"androidScaleType": "CENTER_CROP",
			"splashFullScreen": true,
			"splashImmersive": true,
			"showSpinner": false
		}
	},
	"packageClassList": [
		"AppIconPlugin",
		"FilesystemPlugin",
		"SharePlugin",
		"SplashScreenPlugin",
		"StatusBarPlugin"
	]
}
